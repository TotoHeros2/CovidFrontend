<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:m="urn:import:gwt.material.design.client.ui"
		xmlns:p="urn:import:ch.hug.simed.covid.frontend.client.view"
	>
	<ui:style
		type="ch.hug.simed.covid.frontend.client.view.ContainerEditor.MyStyle">
	
	.important {
		font-weight: bold;
	}
	.inclusion {
		font-weight: 400;
		background-color: green;
		color: white;
		font-size: 1.28rem;
		display : inline;
	}
	
	.exclusion {
		background-color: red;
		font-weight: 400;
		color: white;
		font-size: 1.28rem;
		display : inline;	
	}
	.h4 {
	    font-size: 1.6rem;

	}
	.paddingBottom {
		padding-bottom: 15px;
	}
	</ui:style>
	
	<m:MaterialPanel  shadow="3"  addStyleNames="{style.paddingBottom}">
		<m:MaterialLabel padding="10" ui:field="panelTitle" margin="0"/>
		<p:GroupOperateurEditorRB ui:field="groupOp"></p:GroupOperateurEditorRB>

		<g:VerticalPanel ui:field="panel"></g:VerticalPanel>
	
	</m:MaterialPanel>
	
</ui:UiBinder> 